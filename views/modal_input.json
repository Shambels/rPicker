{
  "type": "modal",
	"title": {
		"type": "plain_text",
		"text": "rPicker"
	},
	"submit": {
		"type": "plain_text",
		"text": "Submit"
	},
	"blocks": [
    {
      "label": {
				"type": "plain_text",
				"text": "Pick a Task"
			},
      "type": "input",
			"element": {
				"type": "static_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Select an existing task",
					"emoji": true
				},
				"options": [
					{
						"text": {
							"type": "plain_text",
							"text": "Existing task #1",
							"emoji": true
						},
						"value": "value-0"
					},
          {
						"text": {
							"type": "plain_text",
							"text": "Existing task #2",
							"emoji": true
						},
						"value": "value-1"
					}
				],
				"action_id": "task_select-action"
			}
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "new_task_input",
				"placeholder": {
					"type": "plain_text",
					"text": "Enter Task Name here"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Create a new Task"
			}
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"action_id": "description_input",
				"multiline": true,
				"placeholder": {
					"type": "plain_text",
					"text": "Enter Task description (optional)"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Description"
			}
		},
    {
      "label": {
        "type": "plain_text",
        "text": "Candidate Users"
      },
			"type": "input",
			"element": {
				"type": "multi_users_select",
        "action_id": "users_select-action",
				"placeholder": {
					"type": "plain_text",
					"text": "Select User to be picked from",
					"emoji": true
				}
			}
		}
	]
}
